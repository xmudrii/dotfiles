# digitalocean/doctl
if doctl --help >/dev/null 2>&1; then
  source <(doctl completion bash)
fi

# kubicorn
if kubicorn --help >/dev/null 2>&1; then
  source <(kubicorn completion bash)
fi

# kubectl
if kubectl --help >/dev/null 2>&1; then
  source <(kubectl completion bash)
fi

# git-prompt
# Get it from the original Git repo: 
# https://raw.githubusercontent.com/git/git/master/contrib/completion/git-prompt.sh
if [ -f ~/.git-prompt.sh ]; then
  source ~/.git-prompt.sh
fi

# git-completion
# Get it from the original Git repo: 
# https://raw.githubusercontent.com/git/git/master/contrib/completion/git-completion.bash
if [ -f ~/.git-completion.bash ]; then
  source ~/.git-completion.bash
fi

# alacritty
if [ -f ~/.alacritty-completions.bash ]; then
  source ~/.alacritty-completions.bash
fi

# kubectx
if [ -f ~/.kubectx-completion.bash ]; then
  source ~/.kubectx-completion.bash
fi

# kubens
if [ -f ~/.kubens-completion.bash ]; then
  source ~/.kubens-completion.bash
fi
