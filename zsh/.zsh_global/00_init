## Environment
alias vi=nvim
alias vim=nvim
export EDITOR=code
export VISUAL=code

## Colored man pages
export LESS_TERMCAP_mb=$'\E[01;31m'
export LESS_TERMCAP_md=$'\E[01;31m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;44;33m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;32m'

## GPG
export GPG_TTY=$(tty)

## Layout
alias dev_layout='tmux split-window -h -p 40 && tmux split-window -v'

## Reverse search
bindkey "^r" history-incremental-pattern-search-backward
KEYTIMEOUT=1

## Go
export GOROOT=/usr/local/go
export GOROOT_BOOTSTRAP=$GOROOT
export GOPATH=$HOME
export PATH=$PATH:$GOROOT/bin:$GOPATH/bin

## Node.JS
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"

## Android
export ANDROID_HOME=/opt/android-sdk

## Ruby
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
alias bi='bundle install --path=.bundle/gems'
alias be='bundle exec'

## Google Cloud SDK
if [ -f '/home/marko/google-cloud-sdk/path.zsh.inc' ]; then source '/home/marko/google-cloud-sdk/path.zsh.inc'; fi
if [ -f '/home/marko/google-cloud-sdk/completion.zsh.inc' ]; then source '/home/marko/google-cloud-sdk/completion.zsh.inc'; fi

## s3cmd
export PATH=$PATH:/usr/local/s3cmd

## Other dotfiles
source ~/.secrets

## Restart KDE
alias rekde='killall plasmashell && kstart plasmashell'
